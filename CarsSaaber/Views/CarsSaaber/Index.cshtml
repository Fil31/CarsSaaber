@model IEnumerable<CarsSaaber.Models.CarsSaaber.CarsSaaberIndexViewModel>

<div class="h1">
    Cars
</div>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="CarsSaaber" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Price</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Color</th>
                <th scope="col">Discount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var car in Model)
                {
                    <tr>
                        <td>@(rowNumber++)</td>
                        <td>@car.Price</td>
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.Year</td>
                        <td>@car.Color</td>
                        <td>@car.Discount</td>
                        <td>
                            <a asp-action="details" asp-controller="CarsSaaber" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                            <a asp-action="update" asp-controller="CarsSaaber" asp-route-id="@car.Id" class="btn btn-outline-primary">Update</a>
                            <a asp-action="delete" asp-controller="CarsSaaber" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</form>